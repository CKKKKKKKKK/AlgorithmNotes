{
    "latex-workshop.latex.recipes": [
        {
            "name": "latexmk-notes",
            "tools": [
                "latexmk"
            ]
        }
    ],
    "latex-workshop.latex.tools": [
        {
            "name": "latexmk",
            "command": "latexmk",
            "args": [
                "-xelatex",
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-halt-on-error",
                "-time",
                "%DOC%"
            ]
        }
    ],
}